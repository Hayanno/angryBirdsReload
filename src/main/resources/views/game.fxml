<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="body" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="angrybirdsreload.controller.GameController">
    <Pane fx:id="playField" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    <HBox AnchorPane.bottomAnchor="0.0">
        <Button fx:id="backMenuButton" mnemonicParsing="false" onAction="#menuButtonAction" prefHeight="25.0" prefWidth="200.0" styleClass="menuButton" text="Menu">
            <HBox.margin>
                <Insets>
                    <bottom>30</bottom>
                    <left>60</left>
                </Insets>
            </HBox.margin>
        </Button>
    </HBox>
    <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Text fx:id="scoreLayer" fill="WHITE" styleClass="scoreLayer" textAlignment="RIGHT">
            <HBox.margin>
                <Insets>
                    <bottom>40</bottom>
                    <right>60</right>
                </Insets>
            </HBox.margin>
        </Text>
    </HBox>
    <HBox fx:id="popup" alignment="CENTER" visible="false" AnchorPane.bottomAnchor="295.6" AnchorPane.rightAnchor="500.0" AnchorPane.leftAnchor="500.0" AnchorPane.topAnchor="295.6">
        <Text fx:id="popupText" fill="WHITE" >
            Game over
        </Text>
    </HBox>
</AnchorPane>
